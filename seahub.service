[Unit]
Description=Seafile Server
Requires=ccnet.service
After=ccnet.service memcached.service

[Service]
LimitNOFILE=10000
Type=forking
PIDFile=/run/seafile/seahub-wsgi.pid
GuessMainPID=no
User=seafile
Group=seafile
ExecStart=/usr/bin/seafile-luanch seahub -s /run/seafile/seahub.sock --pidfile /run/seafile/seahub-wsgi.pid -t 5
TimeoutStartSec=6
TimeoutStopSec=30


[Install]
WantedBy=multi-user.target